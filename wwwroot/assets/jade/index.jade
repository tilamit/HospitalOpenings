//-====================================
//- CONFIG: ALWAYS INCLUDE
include config
//- CONFIG-OVERRIDES: Per-page Settings
- var owlSlider       = true
- var parallax        = true     
- var newsletter      = true
- var appointmentForm = true
- var contactForm     = true
- var particles       = true
//-====================================

doctype html
html(lang="en")
  head
    block variables
      - var title = "Medical Premium Theme"
    include templates/head
  body.sticky_header
    .overflow_wrapper
      include templates/header
      include templates/headpanel-slider-owl
      //include templates/headpanel-slider-full-height
      .main
        section.no_padding.no_cols_padding.transparent.elevate
          .container
            .row
              include templates/entry
        section
          .container
            .row
              .col-md-12.section_header.fancy.centered 
                h2 Our Services
                p.uppercase from our top rated health staff      
              include templates/services
        section.secondary_section.transparent-film.parallax-window.vcenter(style="background-image: url('./assets/images/hands.jpg')")
          .container
            .row
              .col-md-8.col-sm-8
                include templates/call-to-action
              .col-md-4.col-sm-4
                .pricing_plan.black_section.transparent.transparent-film
                  .stretchy-wrapper.ratio_2-1
                    .pricing_plan_photo(style="background-image:url('./assets/images/pricing-004.jpg');")
                  .plan_title.skincolored_section.transparent.transparent-film
                    h3 FAMILY
                    p All Inclusive Plan
                  .the_price
                    | $49.99
                    small /year            
        section#contact_panel
          .container
            .row
              .col-md-4.light_section.boxed.same_height_col
                h3.col_header.centered QUICK CONTACT
                include templates/contact-quick
              .col-md-4.secondary_section.boxed.elevate
                h3.col_header.centered APPOINTMENT
                include templates/contact-appointment
              .col-md-4.skincolored_section.transparent-film.boxed.same_height_col(style="background-image:url('./assets/images/entry-005.jpg')")
                h3.col_header.centered WORKING HOURS
                include templates/timetable-small
        section.dark_section.particles-js#news
          .container
            .row
              .col-md-12
                .post-grid.compact
                  .row
                    .col-md-12
                      article.post
                        .row
                          .col-md-4
                            figure
                              a(href='./single.html', title='Post')
                                img(src="./assets/images/sports.jpg", alt="image-desc")
                          .col-md-8
                            h2.post_title
                              a(href='./single.html') Exercise against Arrhythmia today
                            p.post_subtitle
                              | Make an exercise plan together with your doctor and learn how to check your heart rate.  
                            p.
                              If you have an irregular heartbeat (arrhythmia), ask your doctor what type and level of exercise is safe for you. Regular activity can help keep your heart and body healthy. Know what symptoms could be a sign of a problem. Make an exercise plan together with your doctor. An exercise program usually consists of stretching, activities that increase your heart rate (aerobic exercise), and strength training (lifting light weights). [...]
                            br
                            a.btn.btn-success.with-icon(href='single.html')
                              | Read More
                              i.fa.fa-caret-right
                            a.btn.btn-primary.with-icon(href='blog.html')
                              | Visit our Blog
                              i.fa.fa-caret-right                    
        section.skincolored_section
          .container
            .row
              .col-md-12
                include templates/newsletter-svg      
      // FOOTER
      include templates/footer
    include templates/scripts